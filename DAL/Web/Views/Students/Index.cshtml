@model PagedResult<ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Index";

}

<h1>Students</h1>

<div>
    <br />
    <a asp-action="Create" asp-controller="Students" class="btn btn-primary">Create</a>
    <div>
        <table id="studentGrid"
               class="table table-stiped table-bordered dt-responsive nowrap"
               width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Contact</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Data)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.UserName</td>
                    <td>@item.Contact</td>
                    <td>
                        <a asp-action="Result" asp-controller="Students"
                           asp-all-route-data="@(new Dictionary<string, string>{{"studentId",item.Id.ToString()}})"
                           class="btn btn-primary">Result</a> |
                        <a asp-action="Delete" asp-controller="Students"
                           asp-all-route-data="@(new Dictionary<string, string>{{"studentId",item.Id.ToString()}})"
                           class="btn btn-outline-danger">Delete</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
        <cs-pager cs-paging-pagesize=(int)Model.PageSize
                  cs-paging-pagenumber=(int)Model.PageNumber
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-pagenumber-param="pagenumber"
                  asp-controller="Students"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#studentGrid').DataTable({
                "paging": false,
                "filter": true
            });
        });
    </script>
}