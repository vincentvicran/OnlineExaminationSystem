@model PagedResult<ViewModels.GroupViewModel>

@{
    ViewData["Title"] = "Index";
}

<h4>Groups</h4>
<hr />

<div>
    <br />
    <a asp-action="Create" asp-controller="Groups" class="btn btn-primary">Create</a>
    <hr />
    <div>
        <table id="groupGrid"
               class="table table-stiped table-bordered dt-responsive nowrap"
               width="70%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td><a asp-action="Details" asp-controller="Groups" 
                               asp-all-route-data="@(new Dictionary<string, string>{{"groupId",item.Id.ToString()}})"
                               class="btn btn-primary">Students</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <cs-pager cs-paging-pagesize=(int)Model.PageSize
                  cs-paging-pagenumber=(int)Model.PageNumber
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-pagenumber-param="pagenumber"
                  asp-controller="Groups"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#groupGrid').DataTable({
                "paging": false,
                "filter": true
            });
        });
    </script>
}