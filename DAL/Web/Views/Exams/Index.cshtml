@model PagedResult<ViewModels.ExamViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";

}

<h4>Exams</h4>

<div id="parentDiv">
    <br />
    <a asp-action="Create" asp-controller="Exams" class="btn btn-primary">Create</a>
    <hr />
    <div>
        <table id="examGrid"
               class="table table-stiped table-bordered dt-responsive nowrap"
               width="70%" cellspacing="0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>Time</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.StartDate</td>
                        <td>@item.Time hours</td>
                    </tr>
                }
            </tbody>
        </table>

        <cs-pager cs-paging-pagesize=(int)Model.PageSize
                  cs-paging-pagenumber=(int)Model.PageNumber
                  cs-paging-totalitems=(int)Model.TotalItems
                  cs-pagenumber-param="pagenumber"
                  asp-controller="Exams"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#examGrid').DataTable({
                "paging": false,
                "filter": true
            });
        });

        $("#printPDF").click(function () {
            var element = document.getElementById('examGrid');
            //Choose pagebreak options based on the specified mode.
            var mode = "avoid-all";
            var pagebreak = (mode === 'specify') ?
                { mode: '', before: '.before', after: '.after', avoid: '.avoid' } :
                { mode: mode };

            //Generate the PDF.
            html2pdf().from(element).set({
                margin: [30, 10, 5, 10],
                pagebreak: { avoid: 'tr' },
                jsPDF: { orientation: 'landscape', unit: 'pt', format: 'letter', compressPDF: true }
            }).save()
        })
    </script>
}